<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bookhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Networking.NetworkSecurity"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookHUB">
        <activity
            android:name=".Write_story"
            android:exported="false" />
        <activity
            android:name=".story_audio"
            android:exported="false"
            android:label="@string/title_activity_story_audio"
            android:theme="@style/Theme.BookHUB.NoActionBar"
            tools:ignore="MissingClass" />
        <activity
            android:name=".audio_story"
            android:exported="false"
            android:label="@string/title_activity_audio_story"
            android:theme="@style/Theme.BookHUB"
            tools:ignore="MissingClass" />
        <activity
            android:name=".Audio_story_activity"
            android:exported="false" />
        <activity
            android:name=".BookActivity.BookMark"
            android:exported="false" />
        <activity
            android:name=".BookActivity.PdfReada"
            android:parentActivityName=".BookActivity.Pdfviewer" />
        <activity
            android:name=".BookActivity.Book"
            android:exported="false" />
        <activity
            android:name=".BookActivity.Pdfviewer"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat"
            tools:ignore="LockedOrientationActivity" /> <!-- optional (needed if default theme has no action bar) -->
        <activity
            android:name=".Authentication.Login_fragment"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable,LockedOrientationActivity" />
        <activity
            android:name=".Authentication.Loginhome"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".startup.wellcomeuser"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Loginuser"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="MissingClass" />
        <activity
            android:name=".LoginHome"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="MissingClass" />
        <activity
            android:name=".Home"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Wellcome"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity,MissingClass" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>